# -------------------------------------------------------------------
# SAP OData connection
# -------------------------------------------------------------------

# Base URL MUST end at /sap/opu/odata/
# Example:
#   https://s4hana.company.com/sap/opu/odata/
S4_BASE_URL="https://coeportal515.saphosting.de/sap/opu/odata/sap"

# Choose ONE auth method
# --- Option A: Basic auth ---
S4_USER = "APIUSR"
S4_PASS = "Welcome1"

# Optional SAP client (omit for systems without sap-client)
S4_SAP_CLIENT=600

# TLS verification (true | false | path to CA bundle)
S4_VERIFY_TLS=true

# -------------------------------------------------------------------
# Safety limits (strongly recommended)
# -------------------------------------------------------------------

# Hard cap on $top per request
ODATA_MAX_TOP=500

# Max pages to follow via nextLink
ODATA_MAX_PAGES=5

# Cache TTL for $metadata (seconds)
ODATA_META_TTL=900


# -------------------------------------------------------------------
# Networking / runtime tuning
# -------------------------------------------------------------------

# HTTP timeout to SAP (seconds)
ODATA_TIMEOUT=60

# Retry behavior for transient failures
ODATA_RETRIES=3
ODATA_BACKOFF=0.5

ODATA_API_KEY="your_api_key_here"